<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "rounded border-gray-300 focus:ring focus:ring-blue-300" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
