<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign up", class: "w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700 transition" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
