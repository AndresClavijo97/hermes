<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-6">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600">
        Currently waiting confirmation for: <span class="font-medium text-blue-600"><%= resource.unconfirmed_email %></span>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
      <span class="text-xs text-gray-500">(leave blank if you don't want to change it)</span>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :current_password, class: "text-sm font-medium text-gray-700" %>
      <span class="text-xs text-gray-500">(we need your current password to confirm your changes)</span>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 px-4 py-2 border rounded-lg w-full focus:ring focus:ring-blue-300" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update", class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <h3 class="text-lg font-bold text-center mt-6 text-red-600">Cancel my account</h3>
  <div class="text-center text-sm text-gray-600">
    Unhappy?
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mt-2 bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition" %>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Back", :back, class: "text-blue-600 hover:underline" %>
  </div>
</div>
